---
const { titleOne, description, body } = Astro.props
---

<section id="features" class="bg-silobg bg-cover bg-bottom no-repeat">
  <div
    class="mx-auto w-full lg:px-24 max-w-7xl md:px-12 items-center px-8 py-24 scroll-mt-12">
    <div class="mx-auto max-w-2xl text-center">
      <div>
        <p class="text-black font-bold lg:text-5xl text-4xl tracking-tighter">
          { titleOne }
          <span class="lg:block">
            { description }
          </span>
        </p><p
          class="mt-4 text-lg max-w-xl mx-auto tracking-tight text-black">
          { body }
        </p>
      </div>
    </div>
  </div>
</section>


