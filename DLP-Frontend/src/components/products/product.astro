---
const {product} = Astro.props
const { id, type, section, name, description, image, url } = product
---
<div class="relative flex flex-col text-gray-700 bg-gray-100 shadow-md bg-clip-border rounded-xl md:w-1/2 lg:w-1/3  justify-between" >
  <div class="relative mx-4 mt-4 overflow-hidden text-gray-700 bg-white bg-clip-border rounded-xl h-96">

    <img
      src={ image }
      alt="card-image" class="object-contain w-full h-full" />
  </div>
  <div class="p-4 bg-gray-100">
    
    <div class="flex items-center justify-between mb-2">

      <p class="block font-sans  text-xl antialiased font-bold leading-relaxed text-blue-gray-900">
        {name}
      </p>
      <p class="block font-sans text-xs antialiased font-light leading-relaxed text-blue-gray-900">
        {section}
      </p>
    </div>

    <p class="block font-sans text-sm antialiased font-normal leading-normal text-gray-800 opacity-75">
      {description}
    </p>
  </div>
  <div class="p-6 pt-0 flex justify-center items-center h-100 bg-gray-100">
    <a
      href={"https://api.whatsapp.com/send?phone=3132523008&text=Hola, estoy interesado en cotizar: " + type + " / " + section + " / " + name }
      target="_blank"
      class="align-middle text-green-700 font-sans font-bold text-center uppercase text-xs py-3 px-6 rounded-lg  hover:shadow-gray-900/2 focus:opacity-[0.85] active:opacity-[0.85] active:shadow-none flex flex-row gap-2 justify-center items-center w-full shadow-none hover:scale-105 hover:shadow-none focus:scale-105 focus:shadow-none active:scale-100"
      type="button">
      Cotizar
