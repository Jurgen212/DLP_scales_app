---
import SectionCard from "@components/products/sectionCard.astro";
import { section } from "@interfaces/Sections";


const { title, sections } = Astro.props
---

<section>
    <div
      class="mx-auto w-full lg:px-6 max-w-7xl md:px-12 items-center px-8 py-24 scroll-mt-12">
      <div class="mx-auto max-w-3xl lg:text-center">
        <div>
          <p
            class="text-black font-extrabold lg:text-5xl text-4xl tracking-tighter">
            {title}
          </p>
        </div>
      </div>
      <div class="pt-12 flex flex-row flex-wrap w-full justify-center items-center gap-10">
        {
            sections.map(( sect: section ) =>(
                <SectionCard image={sect.image} title={sect.title} url={sect.url}/>
            ))
        }
      </div>
    </div>
  </section>
  